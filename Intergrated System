    <script>
        // Payment method selection
        const paymentMethods = document.querySelectorAll('.payment-method');
        paymentMethods.forEach(method => {
            method.addEventListener('click', () => {
                document.querySelectorAll('.payment-method').forEach(m => m.classList.remove('active'));
                method.classList.add('active');
                
                // Hide all sections
                document.getElementById('upi-section').classList.add('hidden');
                document.getElementById('paypal-section').classList.add('hidden');
                document.getElementById('card-section').classList.add('hidden');
                document.getElementById('bank-section').classList.add('hidden');
                
                // Show selected section
                if (method.id === 'upi-btn') {
                    document.getElementById('upi-section').classList.remove('hidden');
                } else if (method.id === 'paypal-btn') {
                    document.getElementById('paypal-section').classList.remove('hidden');
                } else if (method.id === 'card-btn') {
                    document.getElementById('card-section').classList.remove('hidden');
                } else if (method.id === 'bank-btn') {
                    document.getElementById('bank-section').classList.remove('hidden');
                }
            });
        });

        // Tab navigation
        document.getElementById('btn-single').addEventListener('click', () => {
            document.getElementById('btn-single').classList.add('tab-active');
            document.getElementById('btn-recurring').classList.remove('tab-active');
            document.getElementById('btn-installments').classList.remove('tab-active');
            
            document.getElementById('single-payment').classList.remove('hidden');
            document.getElementById('recurring-payment').classList.add('hidden');
            document.getElementById('installments-payment').classList.add('hidden');
        });

        document.getElementById('btn-recurring').addEventListener('click', () => {
            document.getElementById('btn-single').classList.remove('tab-active');
            document.getElementById('btn-recurring').classList.add('tab-active');
            document.getElementById('btn-installments').classList.remove('tab-active');
            
            document.getElementById('single-payment').classList.add('hidden');
            document.getElementById('recurring-payment').classList.remove('hidden');
            document.getElementById('installments-payment').classList.add('hidden');
        });

        document.getElementById('btn-installments').addEventListener('click', () => {
            document.getElementById('btn-single').classList.remove('tab-active');
            document.getElementById('btn-recurring').classList.remove('tab-active');
            document.getElementById('btn-installments').classList.add('tab-active');
            
            document.getElementById('single-payment').classList.add('hidden');
            document.getElementById('recurring-payment').classList.add('hidden');
            document.getElementById('installments-payment').classList.remove('hidden');
        });

        // Currency selection effect
        document.getElementById('currency').addEventListener('change', function() {
            alert(`Currency changed to ${this.value}`);
            // Here you would typically update prices based on selected currency
            // For demonstration, we're just showing an alert
        });

        // Input field highlighting
        const inputs = document.querySelectorAll('input');
        inputs.forEach(input => {
            input.addEventListener('focus', () => {
                input.classList.add('input-highlight');
            });
            input.addEventListener('blur', () => {
                input.classList.remove('input-highlight');
            });
        });

        // Simulate payment processing
        const paymentButtons = document.querySelectorAll('.animated-button');
        paymentButtons.forEach(button => {
            button.addEventListener('click', () => {
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
                
                // Simulate API call delay
                setTimeout(() => {
                    button.innerHTML = '<i class="fas fa-check"></i> Payment Successful!';
                    setTimeout(() => {
                        alert('Payment processed successfully! You will receive a confirmation email shortly.');
                        button.disabled = false;
                        button.innerHTML = 'Complete Payment';
                    }, 1000);
                }, 2000);
            });
        });
    </script>
</body>
</html>
